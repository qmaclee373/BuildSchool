(function($){"use strict";CherryJsCore.utilites.namespace('switch_layout_script');CherryJsCore.switch_layout_script={init:function(){if(CherryJsCore.status.is_ready){this.document_ready_render();}else{CherryJsCore.variable.$document.on('ready',this.document_ready_render.bind(this));}},document_ready_render:function(){this.layout_switcher(this);},layout_switcher:function(self){var $window=$(window),isotope=$(".isotope"),scroller=$(".scroll-wrap"),customToggle=$("[data-custom-toggle]");if(customToggle.length){var i;for(i=0;i<customToggle.length;i++){var $this=$(customToggle[i]);$this.on('click',$.proxy(function(event){event.preventDefault();var $ctx=$(this);$($ctx.attr('data-custom-toggle')).add(this).toggleClass('active');},$this));if($this.attr("data-custom-toggle-hide-on-blur")==="true"){$("body").on("click",$this,function(e){if(e.target!==e.data[0]&&$(e.data.attr('data-custom-toggle')).find($(e.target)).length&&e.data.find($(e.target)).length==0){$(e.data.attr('data-custom-toggle')).add(e.data[0]).removeClass('active');}})}
if($this.attr("data-custom-toggle-disable-on-blur")==="true"){$("body").on("click",$this,function(e){if(e.target!==e.data[0]&&$(e.data.attr('data-custom-toggle')).find($(e.target)).length==0&&e.data.find($(e.target)).length==0){$(e.data.attr('data-custom-toggle')).add(e.data[0]).removeClass('active');}})}}}
if(scroller.length){var i;for(i=0;i<scroller.length;i++){var scrollerItem=$(scroller[i]);scrollerItem.mCustomScrollbar({theme:scrollerItem.attr('data-theme')?scrollerItem.attr('data-theme'):'minimal',scrollInertia:100,scrollButtons:{enable:false}});}}
if(isotope.length){var i,j,isogroup=[];for(i=0;i<isotope.length;i++){var isotopeItem=isotope[i],filterItems=$(isotopeItem).closest('.isotope-wrap').find('[data-isotope-filter]'),iso;iso=new Isotope(isotopeItem,{itemSelector:'.isotope-item',layoutMode:isotopeItem.getAttribute('data-isotope-layout')?isotopeItem.getAttribute('data-isotope-layout'):'masonry',filter:'*',masonry:{columnWidth:0.42}});isogroup.push(iso);filterItems.on("click",function(e){e.preventDefault();var filter=$(this),iso=$('.isotope[data-isotope-group="'+this.getAttribute("data-isotope-group")+'"]'),filtersContainer=filter.closest(".isotope-filters");filtersContainer.find('.active').removeClass("active");filter.addClass("active");iso.isotope({itemSelector:'.isotope-item',layoutMode:iso.attr('data-isotope-layout')?iso.attr('data-isotope-layout'):'masonry',filter:this.getAttribute("data-isotope-filter")=='*'?'*':'[data-filter*="'+this.getAttribute("data-isotope-filter")+'"]',masonry:{columnWidth:0.42}});}).eq(0).trigger("click");}
$(window).on('load',function(){setTimeout(function(){var i;for(i=0;i<isogroup.length;i++){isogroup[i].element.className+=" isotope--loaded";isogroup[i].layout();}},600);});}}};CherryJsCore.switch_layout_script.init();}(jQuery));